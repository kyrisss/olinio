{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es5",
    "lib": ["ES2015", "ES2017", "DOM"],
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@mock/*": ["mock/*"],
      "@tools/*": ["src/tools/*"],
      "@context/*": ["src/context/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@redux/*": ["src/redux/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["models/*"],
      "@store/*": ["src/store/*"],
      "@views/*": ["src/views/*"],
      "@constants/*": ["src/constants/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
