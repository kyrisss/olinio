{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:import/typescript",
    "plugin:react-hooks/recommended",
    "plugin:typescript-sort-keys/recommended"
  ],
  "plugins": ["react", "@typescript-eslint", "simple-import-sort", "sort-destructure-keys", "sort-destructure-keys", "typescript-sort-keys"],
  "env": {
    "jest": true
  },
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react", "^@?\\w"],
          ["^(@)(/.*|$)"],
          ["^\\u0000"],
          ["^@mock/*", "^@tools/*", "^@common/*", "^@components/*", "^@hooks/*", "^@redux/*", "^@routes/*", "^@views/*", "^@store/*", "^@constants/*", "^@models/*", "^@styles/*"],
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          ["^.+\\.?(scss)$"]
        ]
      }
    ],
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/ban-ts-ignore": "off",
    "@typescript-eslint/no-namespace": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "arrow-body-style": [2, "as-needed"],
    "no-use-before-define": 0,
    "simple-import-sort/exports": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "max-len": [
      2,
      180,
      {
        "ignorePattern": "^(import|export)\\s.+\\sfrom\\s.+;$",
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "quotes": [2, "double"],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
    ],
    "react-hooks/exhaustive-deps": "error",
    "typescript-sort-keys/interface": "error",
    "typescript-sort-keys/string-enum": "error",
    "comma-dangle": [2, "always-multiline"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@mock", "./mock"],
          ["@tools", "./src/tools"],
          ["@common", "./src/common"],
          ["@components", "./src/components"],
          ["@hooks", "./src/hooks"],
          ["@redux", "./src/redux"],
          ["@routes", "./src/routes"],
          ["@store", "./src/store"],
          ["@views", "./src/views"],
          ["@constants", "./src/constants"],
          ["@models", "./src/models"],
          ["@styles", "./styles"]
        ],
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
